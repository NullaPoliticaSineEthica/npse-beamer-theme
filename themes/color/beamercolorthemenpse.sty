\ProvidesPackage{beamercolorthemenpse}

\mode<presentation>

%% Color definitions
\definecolor{orange}{RGB}{255,143,37}
\definecolor{orangegreen}{RGB}{197,189,76}
\definecolor{paleblue}{RGB}{96,123,139}
\definecolor{npsegreen}{RGB}{120,179,69}
\definecolor{npseblue}{RGB}{51,85,97}

\setbeamercolor{title in cover}{fg=white}

\ifnpse@dark%
    \usecolortheme{seagull}
    \setbeamercolor*{frametitle}{fg=white}
\else%
    \usecolortheme{rose}
    \setbeamercolor{structure}{fg=black}
    \setbeamercolor{section in footer}{fg=black,bg=}
    \setbeamercolor{subsection in footer}{fg=black,bg=}
    \setbeamercolor{pagenumber in footer}{fg=black,bg=}
    \setbeamercolor*{frametitle}{fg=black}
\fi%

\setbeamercolor{block title}{bg=npseblue,fg=white}
\setbeamercolor{block title alerted}{bg=npsegreen,fg=black}
\setbeamercolor{alerted text}{fg=npsegreen}

\mode
<all>
