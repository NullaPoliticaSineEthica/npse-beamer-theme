	\PassOptionsToPackage{coverbackgroundimage=#1}{beamerouterthemeosoco2012}
}

\DeclareOptionBeamer{dark}{\osoco@darktrue}

\ProcessOptionsBeamer

\mode<presentation>

\usecolortheme{osoco2012}
\useinnertheme{osoco2012}
